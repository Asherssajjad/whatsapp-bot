# Copy to .env and fill in values
# Database (PostgreSQL - Railway provides DATABASE_URL)
DATABASE_URL=postgresql+asyncpg://user:pass@host:5432/dbname
# For sync (Alembic migrations): use postgresql:// (no asyncpg)
SYNC_DATABASE_URL=postgresql://user:pass@host:5432/dbname

# JWT
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# WhatsApp Cloud API (per-user tokens stored in DB; this is for webhook verification)
WHATSAPP_VERIFY_TOKEN=your-webhook-verify-token

# OpenAI (optional AI fallback)
OPENAI_API_KEY=sk-your-openai-key

# App URL (for webhook base URL)
APP_URL=https://your-backend.railway.app

# Email (for new lead notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@yourapp.com

# CORS (frontend URL)
CORS_ORIGINS=https://your-frontend.vercel.app,http://localhost:3000
